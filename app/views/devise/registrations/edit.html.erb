<%=render 'nav'%>
<h2>Edit <%= resource_name.to_s.humanize %></h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
  <%= devise_error_messages! %>

  <div class="field">
    <%= f.label :first_name %><br />
    <%= f.text_field :first_name %>
  </div>

  <div class="field">
    <%= f.label :last_name %><br />
    <%= f.text_field :last_name %>
  </div>

 
 <div class="field">
 <%= f.label :job_title%><br />
      <%=f.select(:job_title, options_for_select([['Business Intelligence','Business Intelligence'],['Cape Town Sales Manager','Cape Town Sales Manager'],['Cape Town Sales','Cape Town Sales'], ['CEO','CEO'], ['City Planner Manager','City Planner Manager'], ['City Planner','City Planner'], ['CS','CS'], ['CS Manager','CS Manager'], ['Durban Sales', 'Durban Sales'], ['Durban City Manager', 'Durban City Manager'], ['Editorial', 'Editorial'], ['Editorial Manager', 'Editorial Manager'], ['Finance', 'Finance'], ['Goods Administrator', 'Goods Administrator'], ['Goods Manager', 'Goods Manager'], ['Goods Sales', 'Goods Sales'], ['Goods Manager', 'Goods Manager'], ['HR Manager', 'HR Manager'], ['Johannesburg Sales','Johannesburg Sales'], ['Logistics','Logistics'], ['Logistics Manager','Logistics Manager'], ['Pretoria Sales','Pretoria Sales'], ['Pretoria Sales Manager', 'Pretoria Sales Manager'], ['Product Designer', 'Product Designer'], ['PRM', 'PRM'], ['PRM Manager', 'PRM Manager'], ['QA', 'QA'], ['Risk Manager', 'Risk Manager'], ['Strategic Accounts', 'Strategic Accounts'], ['Telesales', 'Telesales'], ['Telesales Manager', 'Telesales Manager'], ['Travel', 'Travel']]), :include_blank => 'Please Select') %></div>


  <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
    <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
  <% end %>

  <div class="field">
    <%= f.label :password %> <i>(leave blank if you don't want to change it)</i><br />
    <%= f.password_field :password, autocomplete: "off" %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation %><br />
    <%= f.password_field :password_confirmation, autocomplete: "off" %>
  </div>

  <div class="field">
    <%= f.label :current_password %> <i>(we need your current password to confirm your changes)</i><br />
    <%= f.password_field :current_password, autocomplete: "off" %>
  </div>

  <div class="actions">
    <%= f.submit "Update" %>
  </div>
<% end %>

<h3>Cancel my account</h3>

<p>Unhappy? <%= button_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete %></p>

<%= link_to "Back", :back %>
